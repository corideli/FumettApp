<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rettangolofumetto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/titoloFumetto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titolo Fumetto"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/autoreFumetto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autore Fumetto"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/titoloFumetto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/titoloFumetto"
        app:layout_constraintTop_toBottomOf="@+id/titoloFumetto" />

    <TextView
        android:id="@+id/numeroPagineFumetto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero Pagine"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/autoreFumetto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/autoreFumetto"
        app:layout_constraintTop_toBottomOf="@+id/autoreFumetto" />

    <View
        android:id="@+id/statoPallino"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:background="@drawable/circle_shape"
        app:layout_constraintBottom_toBottomOf="@+id/titoloFumetto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titoloFumetto"
        app:layout_constraintTop_toTopOf="@+id/titoloFumetto"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>